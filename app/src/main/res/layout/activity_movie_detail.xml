<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/normal_space">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/ypMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_small">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:textAllCaps="true"
            android:layout_gravity="right"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/large_size"
            android:textStyle="bold"
            tools:text="title" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/space_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_normal"
            android:textStyle="italic"
            tools:text="release Date" />

        <TextView
            android:id="@+id/tvPopularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/space_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_normal"
            android:textStyle="italic"
            tools:text="release Date" />

        <RatingBar
            android:id="@+id/rbMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:layout_gravity="center"
            android:progressTint="@color/common_google_signin_btn_text_dark_default"
            android:stepSize="0"
            tools:rating="5f" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_normal"
            android:textStyle="italic"
            tools:text="rhwp ohoso ojsjoa jaosjdasd jaisjdkasjdk askdjaksdjkasd aksjdkasjda aksdjkasjd askdjaskdja jdaksdj aksdj aksdj a kdjsa kasjdjkj asd jas aksjd " />

    </LinearLayout>
</LinearLayout>
